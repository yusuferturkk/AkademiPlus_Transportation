@model AkademiPlus_Transportation.Models.TblProduct

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @Html.HiddenFor(p => p.ProductID)

    <label>Ürün Adı</label>
    @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
    <br />

    <label>Ürün Tipi</label>
    @Html.TextBoxFor(p => p.ProductSizeType, new { @class = "form-control" })
    <br />

    <label>Ürün Boyutu</label>
    @Html.TextBoxFor(p => p.ProductSize, new { @class = "form-control" })
    <br />

    <label>Ürün Açıklaması</label>
    @Html.TextAreaFor(p => p.ProductDescription, new { @class = "form-control" })
    <br />

    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(p => p.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Ürünü Ekle</button>
</form>